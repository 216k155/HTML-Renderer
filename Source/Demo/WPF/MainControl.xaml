<UserControl x:Class="HtmlRenderer.Demo.WPF.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TreeView x:Name="_samplesTreeView" Grid.Column="0" SelectedItemChanged="OnSelectedItemChanged"/>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Width="4" Background="#FFBCBCBC"/>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>
            <wpf:HtmlPanel x:Name="_htmlPanel" Grid.Row="0" />
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="4" Background="#FFBCBCBC"/>
            <RichTextBox x:Name="_htmlEditor" Grid.Row="2" VerticalScrollBarVisibility="Auto" TextChanged="OnHtmlEditor_TextChanged"/>
        </Grid>
    </Grid>
</UserControl>
