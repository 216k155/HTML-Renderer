<Window x:Class="HtmlRenderer.Demo.WPF.DemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf1="clr-namespace:HtmlRenderer.Demo.WPF"
        Title="HTML Renderer WPF Demo" Height="486" Width="691">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" Background="WhiteSmoke" Margin="0 0 0 2" >
            <DockPanel Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type ToolBarPanel}}}">
                <DockPanel.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                    <Style TargetType="{x:Type Separator}" BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                </DockPanel.Resources>
                <Button Content="Open Sample Form"/>
                <Separator/>
                <Button Content="Show Browser"/>
                <Button Content="Open External"/>
                <Button >
                    <Image/>
                </Button>
                <Separator/>
                <Separator/>
                <Button Content="Generate Image"/>
                <Button Content="Generate PDF"/>
                <Button Content="Run Performance" HorizontalAlignment="Right"/>
            </DockPanel>
        </ToolBar>
        <wpf1:MainControl x:Name="_mainControl" />
    </DockPanel>
</Window>
